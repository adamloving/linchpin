{
  "name": "Linchpin",
  "version": "1.1",
  "manifest_version": 2,
  "description": "The first extension that I made.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://api.flickr.com/",
    "http://facebook.com/*",
    "http://www.facebook.com/*",
    "https://facebook.com/*",
    "https://www.facebook.com/*"
  ], 
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts" : [
      {
        "matches" : [
          "http://facebook.com/*",
          "http://www.facebook.com/*",
          "https://facebook.com/*",
          "https://www.facebook.com/*"
        ],
        "js" : ["content_script.js"],
        "run_at" : "document_idle",
        "all_frames" : false
      }
  ]
}